<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/cb_commonqa"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_margin="15dp"
        android:background="@drawable/selector_group_helper_check"
        android:button="@null"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_commonqa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_corner_background"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_common_qa_label"
                android:layout_width="17dp"
                android:layout_height="10dp"
                android:background="@mipmap/bg_off"
                android:gravity="center"
                android:text="OFF"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_common_qa_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="您们公司产品有哪些呢?"
                android:textColor="@color/txt_333333"
                android:textSize="16dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_common_qa_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="您们公司产品有哪些呢您们公司产品有哪些呢您们公司产品有哪些呢?"
            android:textColor="@color/txt_999999"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/layer_imgs"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>