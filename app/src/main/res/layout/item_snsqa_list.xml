<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/cb_snsqa"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_margin="15dp"
        android:background="@drawable/selector_group_helper_check"
        android:button="@null"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_goods"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@drawable/shape_white_corner_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15sp">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:src="@mipmap/ic_photo_placeholder"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sns_qa_label"
                    android:layout_width="17dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/bg_on"
                    android:gravity="center"
                    android:text="OFF"
                    android:textColor="@color/white"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_sns_qa_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="黑色冷艳风格套装"
                    android:textColor="@color/txt_333333"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_sns_qa_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="top|left"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:text="采用意大利手工打造，品质保证，假一赔十，真皮不容错过!"
                android:textColor="@color/txt_999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sns_qa_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="199999"
                android:textColor="#FF0300"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_sns_qa_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="包邮  |  7天退换货"
                android:textColor="@color/txt_999999"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>