<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/iv_sns_photo"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:id="@+id/checked_layer"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:background="#aacccccc"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_photo_qa_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/shape_goods_label_bg"
            android:paddingLeft="6dp"
            android:paddingTop="3dp"
            android:paddingRight="6dp"
            android:paddingBottom="3dp"
            android:text="商品1"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </FrameLayout>

    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="right"
        android:src="@mipmap/icon_delete_photo"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_flag_checked"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="right"
        android:src="@mipmap/icon_photo_checked"
        android:visibility="gone" />

</FrameLayout>