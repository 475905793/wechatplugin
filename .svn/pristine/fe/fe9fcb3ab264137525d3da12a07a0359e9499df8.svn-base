<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xiezhiai.wechatplugin.widget.CommonTopBar
        android:id="@+id/common_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_button_text="@string/back"
        app:left_button_visible="true"
        app:title="@string/register" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/login_bg"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_white_corner_background"
            android:orientation="vertical"
            android:paddingLeft="33dp"
            android:paddingRight="33dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_phone_icon"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_phone_input" />
                </LinearLayout>


                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/float_transparent"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textSize="15sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/divider_phone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B2B2B2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_yzm_icon"
                        android:layout_width="11dp"
                        android:layout_height="14dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_yzm_input" />
                </LinearLayout>


                <EditText
                    android:id="@+id/et_yzm"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@color/float_transparent"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/btn_get_captcha"
                    android:layout_width="92dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/shape_get_yzm_bg"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="获取验证码"
                    android:textColor="#007AFF"
                    android:textSize="14sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/divider_yzm"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B2B2B2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_psw_icon"
                        android:layout_width="11dp"
                        android:layout_height="14dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_psw_input" />
                </LinearLayout>


                <EditText
                    android:id="@+id/et_psw"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/float_transparent"
                    android:hint="密码为8-16位数字、字符或符号"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:textSize="15sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/divider_psw"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B2B2B2" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_send_msg_button_background"
                android:gravity="center"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已有账号?"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/login"
                    android:textColor="#007AFF"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>


